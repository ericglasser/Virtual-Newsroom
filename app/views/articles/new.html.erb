<h1>New Article</h1>
<%= form_for @article do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="onecolumn">
	<div class="header">
		<span></span>
	</div>
	<br class="clear"/>
	<div class="content">
		<br class="clear"/>
		<h2>Article Info</h2>
		<br/>
		<p>
			<%= f.label :name %>
			<br />
			<%= f.text_field :name %>
		</p>
		<br/>
		<p>
			<%= f.label :description %>
			<br />
			<%= f.text_field :description %>
		</p>
		<br/>
		<p>
			<%= f.label :content %>
			<br />
			<%= f.text_area :content %>
		</p>
		<br/>
		<p>
			<% if !@select == 1 %>
			<%= f.hidden_field :story_id, :value => @story.id %>
			<% end %>
			<% if @select == 1 %>
 			<%= f.select("story_id", @stories.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'}) %>
 			<% end %>	
			<%= f.hidden_field :user_id, :value => current_user.id %>
		</p>
		<br/>
		<br/>
		<p>
			<%= f.submit "Submit" %>
		</p>
	</div>
	<% end %> <!-- End left column window -->
