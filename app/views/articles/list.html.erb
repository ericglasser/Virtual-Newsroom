
      <!-- Begin one column window -->
<div class="onecolumn">
	<div class="header">
		<span>Articles</span>
	</div>
	<br class="clear"/>
	<div class="content">
		<form id="form_data" name="form_data" action="" method="post">
			<table class="data" width="100%" cellpadding="0" cellspacing="0">
				<thead>
					<tr>
						<th style="width:10px">
						<input type="checkbox" id="check_all" name="check_all"/>
						</th>
						<th style="width:30%">Name</th>
						<th style="width:20%">Description</th>
						<th style="width:30%">Date</th>
						<th style="width:15%">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @articles.each do |article| %>
					<tr>
						<td>
						<input type="checkbox"/>
						</td>
						<td><%= link_to article.name,article_path(article) %></td>
						<td><%= article.description %></a></td>
						<td>Coming Soon..</td>
						<td><%= link_to image_tag("icon_edit.png"), edit_article_path(article) %><%= link_to image_tag("icon_delete.png"), article, :method => :delete %></p></td>
						<!--
						-->
					</tr>
			<% end %>
				</tbody>
			</table>
			<div id="chart_wrapper" class="chart_wrapper"></div>
			<!-- End bar chart table-->
		</form>
		<!-- Begin pagination -->
		<div class="pagination">
			<a href="#">«</a>
			<a href="#" class="active">1</a>
			<a href="#">2</a>
			<a href="#">3</a>
			<a href="#">4</a>
			<a href="#">5</a>
			<a href="#">6</a>
			<a href="#">»</a>
		</div>
		<!-- End pagination -->
	</div>
</div>
