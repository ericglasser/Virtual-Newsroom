<h1><%= @album.name %></h1>
<div>
	<p>
		<%= link_to "Back", @album.story%>
		<%= link_to "Upload", :controller => "pictures", :action => "new", :album_id => @album.id %>
		<%= link_to "Edit", edit_album_path(@album) %>
		<%= link_to "Delete", @album, :method => :delete %>
	</p>
</div>
<div class="onecolumn"> 
		<div class="header">
		<span>Albums</span>
	</div>
	<br class="clear"/>
	<div class="content">
<% @album.pictures.each do |picture| %>
<div style="width:120px;height: 120px;margin:2px;padding:5px;text-align: center;display: inline-block;vertical-align: middle;">
<p style="height: 100px;"><%= link_to image_tag(picture.image_url(:thumb)), picture_path(picture) if picture.image? %></p>
<p>
	<%= link_to "Edit", edit_picture_path(picture) %>
	<%= link_to "Delete", picture, :method => :delete %></p>
</p>
</div>
<% end %>
</div>
</div>
